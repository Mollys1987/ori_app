<div class="container" style="margin-top: 15px">
  <h3 class="title">お気に入りユーザーの
  <br>投稿一覧</h3>

    
  <% @follow_users.each do |fu| %>
    <% fu.posts.each do |lp| %>
      <div class="card">
        <div class="card-header">
          <% if fu.profile_image? %>
            <%= image_tag fu.profile_image.url, class: "rounded-circle", size: "30x30" %>
          <% else %>
            <%= image_tag "icon.png", class: "rounded-circle", size: "30x30", style: "border: 3px solid black;" %>
          <% end %>
          <%= link_to fu.nickname, u_show_path(fu.id) %>
        </div>
        <div class="card-body">
          <b>タイトル：</b><%= link_to lp.title, p_show_path(lp.id) %>
          <br>
          <br>
          <b>検索キーワード：</b>
          <br>
          <%= "#1.#{lp.key_word1}" %>&emsp; <%= "#2.#{lp.key_word2}" %>&emsp; <%= "#3.#{lp.key_word3}" %>&emsp;
          <%= "#4.#{lp.key_word4}" %>&emsp; <%= "#5.#{lp.key_word5}" %>&emsp;
          <br>
          <br>
          <b>投稿日時：</b><%= lp.created_at.to_s(:datetime_jp) %>
          <br>
        </div>
      </div>
    <% end %>
    <% if fu.posts == [] %>
      ※まだ<%= link_to fu.nickname, u_show_path(fu.id) %> さんの
      <br>&emsp;投稿はありません
      <br>
      <br>
    <% end %>
  <% end %>
  <% if @follow_users == [] %>
    <p style="margin-top:10%; text-align:center;">まだお気に入り登録している
    <br>ユーザーがいません</p>
  <% end %>
</div>