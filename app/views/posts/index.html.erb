<div class="container" style="margin-top: 15px">
<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <% if post.user.id != current_user.id %>
    <table class="table table-hover">
      <thead>
        <tr colspan="5">
          <th scope="col">投稿者</th>
          <th scope="col">投稿タイトル</th>
          <th scope="col">投稿日時</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><% if post.user.profile_image? %>
                <%= image_tag post.user.profile_image.url, class: "icon_size" %>
              <% else %>
                <i class="fas fa-user fa-3x"></i>
              <% end %>
              <%= link_to "#{post.user.nickname}さん", u_show_path(post.user.id) %>
          </td>
          <td><%= link_to post.title, p_show_path(post.id) %></td>
          <td><%= post.created_at.to_s(:datetime_jp) %></td>
        </tr>
      </tbody>
      <thead>
        <tr>
          <th colspan="5" scope="col" text-algn="center">投稿キーワード</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= "#1#{post.key_word1}" %></td>
          <td><%= "#2#{post.key_word2}" %></td>
          <td><%= "#3#{post.key_word3}" %></td>
          <td><%= "#4#{post.key_word4}" %></td>
          <td><%= "#5#{post.key_word5}" %></td>
        </tr>
      </tbody>  
    </table>
  <% end %>
<% end %>
</div>