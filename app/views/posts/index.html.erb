<div class="container" style="margin-top: 15px">
    <h1>投稿一覧</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">投稿者</th>
      <th scope="col">投稿タイトル</th>
      <th scope="col">投稿日時</th>
      <th scope="col">投稿キーワード</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><% if post.user.profile_image? %>
            <%= image_tag post.user.profile_image.url, class: "icon_size" %>
          <% else %>
            <i class="fas fa-user fa-3x"></i>
          <% end %>
      </td>
      <td><%= link_to post.user.nickname, u_show_path(post.user.id) %></td>
      <td><%= link_to post.title, p_show_path(post.id) %></td>
      <td><%= post.created_at %></td>
    </tr>
    <% end %>
  </tbody>  
</table>
  </div>