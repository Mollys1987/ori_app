<div class="container" style="margin-top: 15px">
  <h3 class="title">投稿の編集</h1>
    <%= form_for(@post, url: p_up_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', rows: "10" %>
        
        <%= f.label :key_word1, value="検索キーワード1"%>
        <%= f.text_field :key_word1, class: 'form-control' %>
        
        <%= f.label :key_word2, value="検索キーワード2"%>
        <%= f.text_field :key_word2, class: 'form-control' %>
        
        <%= f.label :key_word3, value="検索キーワード3"%>
        <%= f.text_field :key_word3, class: 'form-control' %>
        
        <%= f.label :key_word4, value="検索キーワード4"%>
        <%= f.text_field :key_word4, class: 'form-control' %>
        
        <%= f.label :key_word5, value="検索キーワード5"%>
        <%= f.text_field :key_word5, class: 'form-control' %>
        
        <div style="margin:25px 0px;"></div>
        
        <div id="pic-mov">
        <span class="picture">
          <div class="pic-box">
            <div class="pic-box-item">
              <p>写真１</p>
              <div class="pic-border">
                <% if @post.picture1? %>
                  <%= image_tag(@post.picture1.url, style: "max-width:400px;", style: "width:90%") %>
                <% else %>
                  <p>写真１なし</p>
                <% end %>
              </div>
              <% if @post.picture1? %>
                <p><%= link_to "写真１の削除", pic1_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
            <div class="pic-box-item">
              <p>写真２</p>
              <div class="pic-border">
                <% if @post.picture2? %>
                  <%= image_tag(@post.picture2.url, style: "max-width:400px;", style: "width:90%") %>
                <% else %>
                  <p>写真２なし</p>
                <% end %>
              </div>
              <% if @post.picture2? %>
                <p><%= link_to "写真２の削除", pic2_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
            <div class="pic-box-item">
              <p>写真３</p>
              <div class="pic-border">
                <% if @post.picture3? %>
                  <%= image_tag(@post.picture3.url, style: "max-width:400px;", style: "width:90%") %>
                <% else %>
                  <p>写真３なし</p>
                <% end %>
              </div>
              <% if @post.picture3? %>
                <p><%= link_to "写真３の削除", pic3_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
          </div>
          
          <div class="pic-box">
            <div class="pic-box-item">
              <p>写真４</p>
              <div class="pic-border">
                <% if @post.picture4? %>
                  <%= image_tag(@post.picture4.url, style: "max-width:400px;", style: "width:90%") %>
                <% else %>
                  <p>写真４なし</p>
                <% end %>
              </div>
              <% if @post.picture4? %>
                <p><%= link_to "写真４の削除", pic4_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
            <div class="pic-box-item">
              <p>写真５</p>
              <div class="pic-border">
                <% if @post.picture5? %>
                  <%= image_tag(@post.picture5.url, style: "max-width:400px;", style: "width:90%") %>
                <% else %>
                  <p>写真５なし</p>
                <% end %>
              </div>
              <% if @post.picture5? %>
                <p><%= link_to "写真５の削除", pic5_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
            <div class="pic-box-item">
              <p>動画</p>
              <div class="pic-border">
                <% if @post.video? %>
                  <%= link_to @post.video_url.to_s do %>
                    <%= video_tag(@post.video.to_s, width: "100%", height: "100%") %>
                  <% end %>
                <% else %>
                  <p>動画なし</p>
                <% end %>
              </div>
              <% if @post.video? %>
                <p><%= link_to "動画の削除", mov_des_path(@post.id), method: :delete %></p>
              <% end %>
            </div>
          </div>
          <br>
         <%= f.label :"写真１を追加もしくは変更する" %>
         <br>
         <%= f.file_field :picture1, accept: 'image/jpeg,image/gif,image/png' %>
         <br>
         <br>
         <%= f.label :"写真２を追加もしくは変更する" %>
         <br>
         <%= f.file_field :picture2, accept: 'image/jpeg,image/gif,image/png' %>
         <br>
         <br>
         <%= f.label :"写真３を追加もしくは変更する" %>
         <br>
         <%= f.file_field :picture3, accept: 'image/jpeg,image/gif,image/png' %>
         <br>
         <br>
         <%= f.label :"写真４を追加もしくは変更する" %>
         <br>
         <%= f.file_field :picture4, accept: 'image/jpeg,image/gif,image/png' %>
         <br>
         <br>
         <%= f.label :"写真５を追加もしくは変更する" %>
         <br>
         <%= f.file_field :picture5, accept: 'image/jpeg,image/gif,image/png' %>
        </span>
        
        <div style="margin:25px 0px;"></div>
        <span class="video">
         <%= f.label :"動画を追加もしくは変更する" %>
         <br>
         <%= f.file_field :video, :accept => 'video/*' %>
        </span>
        <div class="balloon1-top">
          <p>投稿時の表示は写真１～５の順で、最後に動画が表示されます。
          <br>写真は1枚あたり容量5MB以下までしか投稿できません。
          </p>
        </div>
        </div>
        
        <!--<div style="margin:25px 0px;"></div>-->
        <div style="text-align:center; margin:25px 0px;">
          <%= f.submit "編集", class: "btn1" %>
        </div>
    <% end %>
</div>