<button id="u_btn"><h2>ユーザー検索</h2></button><button id="c_btn"><h2>ユーザー居住エリア検索</h2></button><button id="key_btn"><h2>キーワード検索</h2></button>
    <div id="u_search" class="hide">
    <%= form_with url: search_func_path, method: :get, local: true do |f| %>
      <%= f.text_field :nickname, placeholder: "ニックネームを記入"%>
      <%= f.submit :search, class: "search_btn" %>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>検索結果</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to(user.nickname, u_show_path(id: user.id)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    
    <div id="c_search" class="hide">
    <%= form_with url: search_func_path, method: :get, local: true do |f| %>
      <%= f.text_field :city, placeholder: "市町村を漢字で記入"%>
      <%= f.submit :search, class: "search_btn" %>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>検索結果</th>
        </tr>
      </thead>
      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td><%= link_to(area.city, u_show_path(id: area.id))%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    
    <div id="key_search">
    <%= form_with url: search_func_path, method: :get, local: true do |f| %>
      <%= f.text_field :title, placeholder: "投稿のキーワードを記入"%>
      <%= f.submit :search, class: "search_btn" %>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>検索結果</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to(post.title, p_show_path(id: post.id)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    
<script>
  $('#u_btn').click(function() {
        $('#u_search').fadeIn();
        $('#c_search').fadeOut();
        $('#key_search').fadeOut();
    })
    
  $('#c_btn').click(function() {
        $('#c_search').fadeIn();
        $('#u_search').fadeOut();
        $('#key_search').fadeOut();
    })
  
  $('#key_btn').click(function() {
        $('#key_search').fadeIn();
        $('#u_search').fadeOut();
        $('#c_search').fadeOut();
    })
</script>