<div class="container" style="margin-top: 15px">
  <%= form_for(:session, url: log_upd_path, method: :patch) do |f| %>
    
    <div class="form-group">
      <%= f.label :ニックネーム %>
      <%= f.text_field :nickname, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <label>年代</label><br>
      <label><%= f.radio_button :age, "10歳代" %>10歳代</label>
      <label><%= f.radio_button :age, "20歳代" %>20歳代</label>
      <label><%= f.radio_button :age, "30歳代" %>30歳代</label>
      <label><%= f.radio_button :age, "40歳代" %>40歳代</label>
      <label><%= f.radio_button :age, "50歳代" %>50歳代</label>
      <label><%= f.radio_button :age, "60歳代" %>60歳代</label>
      <label><%= f.radio_button :age, "70歳代" %>70歳代</label>
      <label><%= f.radio_button :age, "80歳代" %>80歳代</label>
      <label><%= f.radio_button :age, "90歳代" %>90歳代</label>
    </div>
    
    <div class="form-group">
      <label>性別</label>
      <br>
      <label><%= f.radio_button :sex, "男性" %>男性</label>
      <label><%= f.radio_button :sex, "女性" %>女性</label>
    </div>
    
    <div class="form-group">
      <%= f.label :city, value="住所（市区町村）" %><span class="red">※市区町村まで記載してください（○○区、○○市、○○村など）</span> 
      <%= f.text_field :city, id: 'city', class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :answer_digest, value="好きな食べ物はなんですか？" %><span class="red">※漢字やカタカナなど統一した記載にしてください</span>
      <%= f.text_field :answer_digest, class: 'form-control' %>
    </div>
    
      <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
  <% end %>

  <h2>まだ登録していない</h2>
  <%= link_to "新規登録", u_new_path %>
</div>