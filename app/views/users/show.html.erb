<div class="container" style="margin-top: 15px">
    <h1><%= @user.nickname %>の詳細ページ</h1>
    <% if @user.profile_image? %>
      <%= image_tag @user.profile_image.url %>
    <% else %>
      <i class="fas fa-user fa-10x"></i>
    <% end %>
    <section class="stats"> 
      <%= render 'shared/stats' %>
      <%= render 'follow_form' if logged_in? %>
    </section>
    <section class="stats">
    <h3>いいねしている投稿</h3>
      <% @user.liked_posts.each do |post| %>
        <%= link_to post.user.nickname, u_show_path(post.user.id) %>
        <%= link_to post.title, p_show_path(post.id)%>
      <% end %>
    </section>
    <% unless current_user == @user %>
      <%= link_to 'メッセージを送る', chat_path(sender_id: current_user.id, receiver_id: @user.id) %>
    <% end %>
<h2>投稿一覧(全<%= @user.posts.count %>投稿）</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">検索キーワード</th>
      <th scope="col">作成日時</th>
    </tr>
  </thead>
  <tbody>
    <% @user.posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, p_show_path(post.id) %></td>
      <td><%= post.updated_at %></td>
      <td><%= post.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>