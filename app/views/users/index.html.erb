<div class="container" style="margin-top: 15px">
    <h1>ユーザー一覧</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">ニックネーム</th>
      <th scope="col">居住エリア</th>
      <th scope="col">分類</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <% if user != current_user %>
    <tr>
      <td><% if user.profile_image? %>
            <%= image_tag user.profile_image.url, class: "icon_size" %>
          <% else %>
            <i class="fas fa-user fa-3x"></i>
          <% end %>
      </td>
      <td><%= link_to user.nickname, u_show_path(user.id) %></td>
      <td><%= user.prefucture %></td>
      <td><%= user.classification %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>  
</table>
  </div>