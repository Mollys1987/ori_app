<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.nickname %></h1>
      <span><%= link_to "マイページ", @user %></span>
      <span><b>投稿数:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% user.nickname %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        
      </ul>
    <% end %>
  </div>
</div>